<p id="notice"><%= notice %></p>

<h1>Topics</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Vote Count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @topics.sort_by {|topic| -topic.votes.count}.each do |topic| %>
      <tr>
        <td><%= link_to topic.title, topic %></td>
        <td><%= topic.votes.count %></td>
        <td><%= link_to 'delete', topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to '+', upvote_topic_path(topic), method: :post %></td>
        <td><%= link_to '-', downvote_topic_path(topic), method: :post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Topic', new_topic_path %>
<%= link_to 'about', about_path %>
